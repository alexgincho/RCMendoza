@model RCMendoza.Models.ModelDB.Usuario

<div class="modal fade" id="modal-default" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@(Model.IdUsuario !=0 ? "Actualizar":"Registrar") Usuario</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="FormSavePersonal">
                    <input type="hidden" asp-for="IdUsuario">
                    <div class="form-row">
                        <div class="col">
                            <label>DNI</label>
                            <input type="text" class="form-control form-control-sm" placeholder="Doc" asp-for="Numerodoc" autocomplete="off">
                        </div>
                        <div class="col">
                            <label>Nombre</label>
                            <input type="text" class="form-control form-control-sm" placeholder="Nombre" asp-for="Nombres" autocomplete="off">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <label>Apellido Paterno</label>
                            <input type="text" class="form-control form-control-sm" placeholder="Apellido Paterno" asp-for="Apellidopaterno" autocomplete="off">
                        </div>
                        <div class="col">
                            <label>Apellido Materno</label>
                            <input type="text" class="form-control form-control-sm" placeholder="Apellido Materno" asp-for="Apellidomaterno" autocomplete="off">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <label>Telefono</label>
                            <input type="text" class="form-control form-control-sm" placeholder="Telefono" asp-for="Telefono" autocomplete="off">
                        </div>
                        <div class="col">
                            <label>Direccion</label>
                            <input type="text" class="form-control form-control-sm" placeholder="Direccion" asp-for="Direccion" autocomplete="off">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <label>Email</label>
                            <input type="email" class="form-control form-control-sm" placeholder="Email" asp-for="Email" autocomplete="off">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <label>Contrase√±a</label>
                            <input type="password" class="form-control form-control-sm" placeholder="Contrasenia" asp-for="Contrasenia" autocomplete="off">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id=@(Model.IdUsuario !=0 ? "btnUpdate": "btnSave")>@(Model.IdUsuario!=0 ? "Actualizar":"Guardar")</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {}